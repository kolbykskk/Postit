<h2>Sign Up Confirmation</h2>

<div class="row">
  <div class="col-md-4">
    <h4>Are you sure these values are correct?</h4>
    <h5><%= "Email: #{params[:user][:email]}" %></h5>
    <h5><%= "Name: #{params[:user][:name]}" %></h5>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= button_to "Yes", {controller: "users", action: "create", params: params.require(:user).permit(:name, :email, :password, :password_confirmation)}, class: 'btn btn-success' %>
  </div>
  <div class="col-md-4">
    <%= button_to "No", {controller: "users", action: "new"} , class: 'btn btn-danger', method: :get %>
  </div>
</div>
